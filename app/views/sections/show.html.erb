<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div> 
<% end %>
<%= link_to("<< Back to sections", sections_path, :class => "back-link") %>
<div class="sections show">
  <h2>Show Section</h2>
  <table summary="Section detail view">
    <tr>
      <th>Name</th>
      <td><%= @section.name %>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @section.visible ? 'true' : 'false' %>
    </tr>
    <tr>
      <th>Content Type</th>
      <td><%= @section.content_type %>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @section.content %>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @section.created_at %>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @section.updated_at %>
    </tr>
  </table>
</div>